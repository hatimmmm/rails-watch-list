<div class="container p-3">
  <div class="d-flex h-100 gap-3">
    <div class="col-4 h-100"><img class="w-100" src="<%= @movie.poster_url%>" alt=""></div>
    <div class="col-8 h-100">
      <div class="row h-100">
        <div class="col">
          <div class="card w-100">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <h5 class="card-title fs-2"><%= @movie.title%></h5>
                <div class="d-flex align-items-center gap-2 p-2">
                  <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="fa-regular fa-bookmark "></i>
                  </button>
                  <%= button_to "Delete", @movie, method: :delete, class: "btn btn-outline-danger" %>
                </div>
              </div>
              <p class="card-text"><%= @movie.overview%></p>
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-star text-warning me-1"></i>
                <p class="card-text fs-5 "><%= @movie.rating%></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Button trigger modal -->
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add bookmark</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/bookmarks/" method="post">
            <label for="comment" class="mb-2"> Comment: </label>
            <input type="text" name="comment" id="comment" class="form-control">
            <div class="p-3">
            <label for="list_id" class="form-label"> Your lists: </label>
            <%@lists.each do |list|%>
              <div class="form-check">
                <input class="form-check-input" type="radio" value=<%=list.id%> id="flexCheckDefault" name="list_id">
                <label class="form-check-label" for="flexCheckDefault">
                  <%=list.name%>
                </label>
              </div>
            <%end%>
            </div>
            <%=hidden_field(:movie, :id)%>
            <div class="modal-footer">
              <button type="submit" class="btn btn-outline-primary">Add</button>
            </div>
          </form>
          <%=%>
        </div>
      </div>
    </div>
  </div>
